@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment done Successfully!</h1>
        Order Number: @Model <br /><br />
        <img src="~/images/circle_check_img.png" width="65%" />
    </div>
    <div class="col-12 text-center" style="color:maroon;">
        <br />
        Your payment has been done successfully!<br />
        <a asp-action="Details" asp-controller="Order" asp-area="Admin" asp-route-orderId="@Model" class="btn btn-primary">Back to Order Details</a>
    </div>
</div>